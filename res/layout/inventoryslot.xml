<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <!--ad at bottom -->
    <com.google.ads.AdView android:id="@+id/ad"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_alignParentBottom="true"
                           ads:adSize="SMART_BANNER"
                           ads:adUnitId="a151b28451d9a92"
                           ads:testDevices="DF28838C26BDFAE7EB063BFEB7A241D3"
                           ads:loadAdOnCreate="true"/>

<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_above="@id/ad">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TextView
        android:text="@string/item_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/slot_identry"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:numeric="signed"/>
    <Button
        android:id="@+id/slot_browseitemid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_id_browse"/>
    <TextView
        android:text="@string/item_damage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/slot_damageentry"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:numeric="signed"/>
    <TextView
        android:text="@string/item_count"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/slot_countentry"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:numeric="signed"/>
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/slot_fillslot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/slot_fillslot"/>

        <Button
            android:id="@+id/slot_maxcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/slot_maxcountslot"/>

    </LinearLayout>

</LinearLayout>
</ScrollView>
</RelativeLayout>
